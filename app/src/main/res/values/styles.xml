<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoActionBarTheme" parent="Theme.MaterialComponents.Light">
        <item name="background">@color/white</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Sample.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Sample.Text.Light">
        <item name="android:textColor">@color/greyDark</item>
    </style>

    <style name="Sample.Text.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Sample.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Sample.Text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/spacing_medium</item>
        <item name="backgroundTint">@color/selector_default_button_color</item>
        <item name="paddingStart">@dimen/spacing_medium</item>
        <item name="paddingEnd">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
    </style>

    <style name="Sample.Button.Requirements">
        <item name="icon">@drawable/selector_requirements_button_icon</item>
        <item name="iconTint">@color/selector_requirements_button_icon_color</item>
        <item name="backgroundTint">@color/selector_requirements_button_color</item>
        <item name="android:textColor">@color/selector_requirements_text_color</item>
    </style>

    <style name="Sample.Button.Tracking">
        <item name="backgroundTint">@color/selector_tracking_button_color</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">@dimen/button_outline_stroke</item>
        <item name="android:textColor">@color/selector_tracking_text_color</item>
    </style>

    <style name="Sample.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="background">@color/white</item>
        <item name="itemIconTint">@color/selector_bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/selector_bottom_navigation_item_color</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_secondary</item>
    </style>
</resources>